<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_pattern"
    tools:context="com.xmillerx.moneytracker.AddItemActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/textBackground"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/padding_layout"
        android:paddingRight="@dimen/padding_layout"
        android:gravity="center_vertical"
        android:layout_height="@dimen/layout_width">

        <EditText
            android:id="@+id/name"
            android:hint="@string/name_hint"
            android:background="@null"
            android:maxLines="1"
            android:inputType="text"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/price"
            android:layout_marginLeft="8dp"
            android:background="@null"

            android:hint="@string/price_hint"

            android:maxLines="1"
            android:inputType="number"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/price_rub"/>

        <Button
            android:enabled="false"
            android:id="@+id/add_btn"
            android:layout_marginLeft="@dimen/padding_layout"
            android:background="@drawable/ic_add"
            android:layout_width="@dimen/btn_size"
            android:layout_height="@dimen/btn_size" />



    </LinearLayout>

</LinearLayout>
